#!/usr/bin/env bash

function start() {
  echo "Starting Emacs application"
  emacs --version >> $OPENSHIFT_EMACS_DIR/log/emacs-cartridge.log
  HOME=$OPENSHIFT_EMACS_DIR emacs --daemon >> $OPENSHIFT_EMACS_DIR/log/emacs-cartridge.log
  return 0
}

function stop() {
  echo "Stop Emacs"
  if [ -n "$(pgrep emacs)" ] ; then
    emacsclient -e '(elnode-stop (string-to-number (getenv "OPENSHIFT_EMACS_HTTP_PORT")))'
    emacsclient -e '(kill-emacs)'
    echo "kill emacs" >> $OPENSHIFT_EMACS_DIR/log/emacs-cartridge.log
  fi
  return 0
}

function status(){
  [ -n "$(pgrep emacs)" ] && return 0 || return 1
}

function restart(){
  stop
  start
  return 0
}

function update() {
  return 0
}

function tidy() {
  return 0
}

function build() {
  return 0
}

function pre-build(){
 return 0
}

function post-deploy(){
  return 0
}

if ! [ $# -gt 0 ]; then
  echo "Usage: $0 [start|restart|graceful|graceful-stop|stop|status|update]"
  exit 1
fi

case "$1" in
  start) start ;;
  restart|graceful) restart ;;
  graceful-stop|stop) stop ;;
  status) status ;;
  build) build ;;
  pre-build) pre-build ;;
  post-deploy) post-deploy ;;
  tidy) tidy ;;
  update) update ;;
  *)
esac
